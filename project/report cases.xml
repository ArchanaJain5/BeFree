<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absolutex="8dp"
        tools:ignore="Missing1Constraints,MissingConstraints">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:text="REPORT CASES"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/editext1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:hint="Hospital Name"
        />
    <EditText
        android:id="@+id/editext2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <EditText
        android:id="@+id/editext3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <EditText
        android:id="@+id/editext4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Start date"
        android:textSize="24dp"/>
    <CalendarView
        android:id="@+id/c1"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginLeft="50dp"
        >

    </CalendarView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="End date"
        android:textSize="24dp"/>
    <CalendarView
        android:id="@+id/c2"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginLeft="50dp"></CalendarView>
    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Submit"/>
</LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
